            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize= "80sp"/>
