            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="100sp"/>
